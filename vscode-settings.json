{
  "window.zoomLevel": 0,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.rulers": [ 80, 100 ],
  "editor.renderIndentGuides": true,
  "files.associations": {
    "*.am": "makefile",
    "*.tfstate": "json",
    "*.yaml.erb": "yaml",
    "*.yml.erb": "yaml",
    "Puppetfile": "ruby",
    "Vagrantfile": "ruby",
    "Yumfile": "ini"
  },
  "files.exclude": {
    "**/*.pyc": true
  },
  "terraform.formatOnSave": true,
  "[cpp]": {
    "editor.insertSpaces": false,
    "editor.quickSuggestions": false,
    "editor.tabSize": 4
  },
  "[c]": {
    "editor.insertSpaces": false,
    "editor.quickSuggestions": false,
    "editor.tabSize": 4
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "[makefile]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false
  },
  "[shellscript]": {
    "editor.tabSize": 4
  },
  "[puppet]": {
    "editor.rulers": [ 140 ]
  }
}
