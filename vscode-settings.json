{
  "window.zoomLevel": 0,
  "editor.tabSize": 2,
  "editor.rulers": [ 80, 100 ],
  "editor.renderIndentGuides": true,
  "files.associations": {
    "Puppetfile": "ruby",
    "Vagrantfile": "ruby",
    "Yumfile": "ini"
  },
  "files.exclude": {
    "**/*.pyc": true
  },
  "[cpp]": {
    "editor.quickSuggestions": false
  },
  "[c]": {
    "editor.quickSuggestions": false
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "[makefile]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": false
  },
  "[shellscript]": {
    "editor.tabSize": 4
  }
}
